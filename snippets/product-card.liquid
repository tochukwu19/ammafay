{% style %}
.product-card .card {
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  width: 100%;
  transition: all ease-in-out 0.5s;
}

.product-card .card-container {
  overflow: hidden;
}

@media only screen and (max-width: 500px) {
  .product-card .card-container {
    height: 200px;
  }
}

.product-card .card-container:hover .card {
  transform: scale(1.1);
}

.product-card .overlay {
  opacity: 0;
  transition: all ease-in-out 0.5s;
  z-index: -1;
}

.product-card .card-container:hover .overlay {
  opacity: 1;
  z-index: 1;
}
{% endstyle %}

<div class="product-card">
  {% assign variant_age_days = 'now' | date: '%s' | minus: product.selected_or_first_available_variant.created_at | divided_by: 86400 %}

  <form action="{{ routes.cart_url }}" method="post" class="relative">
    <div>
      <div class="card-container relative h-[300px] w-auto group">
        <div class="card-img-overlap relative h-full">
          <div class="card absolute h-[300px] w-auto" style="background-image: url('{{ product | img_url: 'large' }}')"></div>
          
          {% if variant_age_days < 30 %}
            <h3 class="font-[500] absolute left-5 text-white text-[12px] top-[20px]">NEW IN</h3>
          {% endif %}
          
          <button type="button" class="quick-view-btn opacity-0 group-hover:opacity-100 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-fit py-1 md:py-2 px-2 md:px-3 bg-[#DDE893] text-sm md:text-base flex items-center justify-center text-white font-medium transition-opacity duration-300 cursor-pointer">
            Quick View
          </button>
        </div>
      </div>
      
      <div class="text-center mt-4 flex justify-between items-center">
        <div class="flex flex-col">
          <a href="{{ product.url }}" class="text-left text-base font-[500] hover:text-[#777]">
            {{ product.title }}
          </a>
          <p class="product-description hidden text-sm font-[500] text-[#6B7280] mb-4">{{ product.description | strip_html }}</p>

          <div class="w-fit flex flex-col md:flex-row justify-center items-left md:gap-4 text-[#6B7280] uppercase">
            {% if product.compare_at_price != blank %}
              <p class="text-[#777] line-through">{{ product.compare_at_price | money_with_currency }}</p>
            {% endif %}
            <p>{{ product.selected_or_first_available_variant.price | money_with_currency }}</p>
          </div>
        </div>

        <button
          type="submit"
          data-id="{{ product.variants.first.id }}"
          class="add_to_cart cursor-pointer inline-block text-white p-2">
          {% render "icon-plus" %}
        </button>
      </div>
    </div>
  </form>
</div>